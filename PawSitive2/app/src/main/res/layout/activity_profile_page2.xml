<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary80"
    tools:context=".acitvities.ProfilePage2">

    <TextView
        android:id="@+id/WhiteBackground2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextViewProfilePage2" />

    <LinearLayout
        android:id="@+id/menubar"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/home_icon"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_home_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/favourites"
            android:layout_width="81.8dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/heart" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add"
            android:layout_width="81.8dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/messages"
            android:layout_width="81.8dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/message_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile_icon" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backButtonProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/profileImageProfilePage2"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileTextViewProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileImageProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        app:layout_constraintEnd_toStartOf="@+id/activeJobs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/WhiteBackground2"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/profileUserNameProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImageProfilePage2" />

    <Button
        android:id="@+id/reviewsButtonProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Reviews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserNameProfilePage2" />

    <EditText
        android:id="@+id/locationTextProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AnimalButtonProfilePage2" />

    <Button
        android:id="@+id/AnimalButtonProfilePage2"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:text="Animals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImageProfilePage2" />

    <RatingBar
        android:id="@+id/ratingBar2ProfilePage2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:clickable="false"
        android:contextClickable="false"
        android:isIndicator="true"
        app:layout_constraintStart_toEndOf="@+id/reviewsButtonProfilePage2"
        app:layout_constraintTop_toTopOf="@+id/reviewsButtonProfilePage2" />

    <EditText
        android:id="@+id/priceInfoProfilePage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:hint="Price"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTextProfilePage2" />

    <EditText
        android:id="@+id/locationPropertiesInfoProfilePage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:hint="Location Properties"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/priceInfoProfilePage2"
        app:layout_constraintStart_toStartOf="@+id/priceInfoProfilePage2"
        app:layout_constraintTop_toBottomOf="@+id/priceInfoProfilePage2" />

    <EditText
        android:id="@+id/languagesInfoProfilePage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:hint="Languages"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/locationPropertiesInfoProfilePage2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/locationPropertiesInfoProfilePage2"
        app:layout_constraintTop_toBottomOf="@+id/locationPropertiesInfoProfilePage2" />

    <EditText
        android:id="@+id/experienceInfoProfilePage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:hint="Experience: animal, times"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/languagesInfoProfilePage2"
        app:layout_constraintStart_toStartOf="@+id/languagesInfoProfilePage2"
        app:layout_constraintTop_toBottomOf="@+id/languagesInfoProfilePage2" />

    <TextView
        android:id="@+id/activeJobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Active Jobs"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileImageProfilePage2" />

    <Button
        android:id="@+id/startChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButtonProfilePage2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ActiveJobsRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageProfilePage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileImageProfilePage2"
        app:layout_constraintTop_toBottomOf="@+id/activeJobs" />

</androidx.constraintlayout.widget.ConstraintLayout>