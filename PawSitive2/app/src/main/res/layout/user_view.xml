<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/genderAndYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/name"
        android:text="Gender, Age"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/genderAndYear"
        android:text="Location">

    </TextView>


    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_alignStart="@id/profileImage"
        android:layout_alignEnd="@+id/location"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/profileImage"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:stepSize="0.4">

    </RatingBar>

    <TextView
        android:id="@+id/price"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="Price $"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/genderAndYear">

    </TextView>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/location"
        android:layout_below="@id/price">

    </ImageView>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"></ImageView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="10dp"
        android:background="#D3CDCD">

    </LinearLayout>


</RelativeLayout>