<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/genderAndYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/name"
        android:text="Gender, Age"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/genderAndYear"
        android:text="Location">
    </TextView>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_alignStart="@id/profileImage"
        android:layout_marginStart="110dp"
        android:layout_marginTop="4dp"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="Price $"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/genderAndYear">
    </TextView>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="10dp"
        android:background="#D3CDCD">
    </LinearLayout>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="107dp"
        android:layout_height="56dp"
        android:layout_below="@id/price"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/location"
        app:srcCompat="@drawable/heart_3510" />
</RelativeLayout>
